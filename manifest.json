{
  "manifest_version" : 2,

  "name" : "GitPrint",
  "description" : "This extension allows easy 1-click printing of GitHub guides or markdown pages.",
  "version" : "1.0",

  "browser_action" : {
    "default_icon" : {
      "16" : "Gitprint16.png",
      "48" : "Gitprint48.png",
      "128" : "Gitprint128.png"
    },
    "default_title" : "GitPrint this!"
  },

  "background" : {
    "scripts" : ["background.js"]
  },

  "permissions" : [
    "activeTab",
    "tabs"
  ]
}
